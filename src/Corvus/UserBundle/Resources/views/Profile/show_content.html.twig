{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show" xmlns="http://www.w3.org/1999/html">

    <div class="col-md-6 col-md-offset-3" style="margin-bottom: 10px">
        <h1>Your profile</h1>
        <p>{{ 'profile.show.username'|trans }}: {{ user.username }}</p>
        <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>
        <div>
            <a class="btn btn-default" href="{{ path('fos_user_profile_edit') }}">Edit profile</a>
            <a class="btn btn-default" href="{{ path('fos_user_change_password') }}">Change password</a>
    </div>
</div>
