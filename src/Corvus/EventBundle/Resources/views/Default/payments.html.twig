{% extends "EventBundle::layout.html.twig" %}
{% block event_content %}
    <div class="col md-12">
        {{ form_start(form) }}
        <table class="table-bordered">
            {% for guest in guests %}
                <tr>
                    <td>
                        {{ guest.getUsername }}
                    </td>
                    <td>
                        Debt: {{ event.getUserDebt(guest) }}
                    </td>
                    <td>
                        Paid amount: {{ form_widget(form.payment[guest.id]) }}
                    </td>
                </tr>
            {% endfor %}
        </table>
        {{ form_end(form) }}
    </div>
{% endblock event_content %}